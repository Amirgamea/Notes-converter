{
  "name": "bear-converter",
  "version": "1.0.0",
  "description": "Convert Bear notes to perfectly styled DOCX files",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/server.ts",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "better-sqlite3": "^9.2.2",
    "multer": "^1.4.5-lts.2",
    "puppeteer": "^21.11.0",
    "archiver": "^6.0.1",
    "ws": "^8.16.0",
    "markdown-it": "^14.0.0",
    "markdown-it-texmath": "^1.0.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-attrs": "^4.1.6",
    "jsdom": "^24.0.0",
    "katex": "^0.16.9",
    "dotenv": "^16.4.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/archiver": "^6.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/ws": "^8.5.10",
    "@types/markdown-it": "^13.0.7",
    "@types/markdown-it-emoji": "^2.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vite": "^5.0.11",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "concurrently": "^8.2.2"
  }
}
